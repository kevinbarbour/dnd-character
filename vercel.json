{
  "functions": {
    "api/**/*.go": {
      "runtime": "go1.x"
    }
  },
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/public/static/$1"
    },
    {
      "source": "/characters/new",
      "destination": "/api/characters/new"
    },
    {
      "source": "/characters/([0-9]+)/delete",
      "destination": "/api/characters/delete?id=$1"
    },
    {
      "source": "/characters/([0-9]+)",
      "destination": "/api/characters/view?id=$1"
    },
    {
      "source": "/characters",
      "destination": "/api/characters"
    },
    {
      "source": "/api/generate-abilities",
      "destination": "/api/generate-abilities"
    },
    {
      "source": "/api/spells/(.*)",
      "destination": "/api/spells?class=$1"
    },
    {
      "source": "/",
      "destination": "/api/index"
    }
  ]
}
